<%- include('header'); -%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail ">
                <img src="<%=campground.image%>" alt="Responsive image" class="img-thumbnail img-fluid">
                <div class="caption-full over-text caption">
                    <h4 class="float-right"><%=campground.price%>Rs per night</h4>
                    <h4><%=  campground.name %> </h4>
                    <%if(currentUser && campground.author.id.equals(currentUser._id)){%>
                    
                        <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning btn-large">edit</a>
                       <form id="inlineMe"action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                       <button class="btn btn-danger">Delete</button>
                       </form>
                   
                   <%}%>
                    <p><%=  campground.desc %> </p>
                    <p>
                        <em>submitted by- <%=campground.author.username%></em>
                    </p>
                    
                </div>
            </div>
            <div class="card card-body bg-light">
                
                    <div class="text-right ">
                        <a href="/campgrounds/<%= campground._id%>/comments/new" class="btn btn-primary btn-large">add new comment</a>
                    </div>

                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%=comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%=comment.text%>
                                </p>
                                <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
                                <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">edit</a>
                                <form id="inlineMe"action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                                <%}%>
                            </div>
                        </div>
                    
                    <% }) %> 
                
            </div>
        </div>
    </div>
</div>
















<%- include('footer'); -%>